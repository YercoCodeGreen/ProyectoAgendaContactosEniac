<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/item_background">

        <!-- Imagen o ícono de contacto -->
        <ImageView
            android:id="@+id/contactImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_contact_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Foto de contacto" />

        <!-- Nombre del contacto -->
        <TextView
            android:id="@+id/contactNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre Apellidos"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/contactImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <!-- Teléfono del contacto -->
        <TextView
            android:id="@+id/contactTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/contactImage"
            app:layout_constraintTop_toBottomOf="@id/contactNombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <!-- Correo del contacto -->
        <TextView
            android:id="@+id/contactCorreo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/contactImage"
            app:layout_constraintTop_toBottomOf="@id/contactTelefono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

